<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eicky.OtherFunctionsActivity">

    <AutoCompleteTextView
        android:id="@+id/et_activity_host"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入scheme和host,如：http://www.baidu.com"
        android:inputType="textUri"
        tools:ignore="HardcodedText" />

    <AutoCompleteTextView
        android:id="@+id/et_activity_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入path，如：/baidu"
        android:inputType="textUri"
        tools:ignore="HardcodedText" />

    <AutoCompleteTextView
        android:id="@+id/et_activity_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入query，如：?wd=android"
        android:inputType="textUri"
        tools:ignore="HardcodedText" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_to_activity_by_uri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试uri跳转"
        tools:ignore="HardcodedText" />

</LinearLayout>
